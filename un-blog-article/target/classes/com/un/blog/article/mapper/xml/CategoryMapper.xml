<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.un.blog.article.mapper.CategoryMapper">

    <resultMap id="categoryLabelMap" type="Category">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <collection property="labelList" javaType="list" ofType="Label">
            <id column="label_id" property="id"></id>
            <result column="label_name" property="name"/>
        </collection>
    </resultMap>

    <select id="findCategoryAndLabel" resultMap="categoryLabelMap">
        SELECT
            m1.id,
            m1.`name`,
            m2.id label_id,
            m2.`name` label_name
        FROM
            un_category m1
                LEFT JOIN un_label m2 ON m1.id = m2.category_id
        WHERE
            m1.`status` = 1
        ORDER BY
            m1.sort

    </select>
</mapper>